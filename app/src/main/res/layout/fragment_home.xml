<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout


        android:id="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#38C53E">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grab Maa'e Manjah "
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="320dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/user"
            android:onClick="pindahprofil"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/no2"
        android:layout_below="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#E8EAF6">

        <ImageView
            android:id="@+id/saldo"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5sp"
            android:src="@drawable/saldo" />

        <TextView
            android:id="@+id/txtsaldo"
            android:layout_toRightOf="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cari"
            android:text="Rp.100.000"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="-75dp"
            />

        <ImageView
            android:id="@+id/qris"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/txtsaldo"
            android:src="@drawable/qris1" />

        <RelativeLayout
            android:id="@+id/cari"
            android:layout_width="380dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/selektor1" >


            <RelativeLayout
                android:id="@+id/pencarian"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:backgroundTint="@color/white"
                android:background="@drawable/pencarian"/>
            <TextView
                android:id="@+id/tex3"
                android:layout_toRightOf="@id/pencarian"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua Ada Serba Ada ?"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no3"
        android:layout_below="@+id/no2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#C4C9E8">

        <RelativeLayout
            android:id="@+id/P1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector2">



            <ImageView
                android:id="@+id/lima"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30sp"
                android:src="@drawable/makanan" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lima"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="5dp"
                android:text="Food"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/enam"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30sp"
                android:layout_toRightOf="@id/lima"
                android:src="@drawable/mart" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/enam"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:text="Mimart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tujuh"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30sp"
                android:layout_toRightOf="@id/enam"
                android:src="@drawable/mobil" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tujuh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="5dp"
                android:text="Mobil"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/selip"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30sp"
                android:layout_toRightOf="@id/tujuh"
                android:src="@drawable/motor" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tujuh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="5dp"
                android:text="Motor"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/token"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@+id/tujuh"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/hp" />

            <TextView
                android:id="@+id/bilan"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_below="@id/token"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Token"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/hotel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tujuh"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/token"
                android:src="@drawable/hotel" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_below="@id/hotel"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="5dp"
                android:text="Hotel"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/no3"
        android:layout_centerVertical="true"
        android:layout_marginTop="-200dp">

        <LinearLayout
            android:id="@+id/lyuscrol"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="#C5CAE9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sc1"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:src="@drawable/br1" />

            <ImageView
                android:id="@+id/sc2"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/br2" />

            <ImageView
                android:id="@+id/sc3"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/br3" />

            <ImageView
                android:id="@+id/sc4"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/br4" />
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>